<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backgroundColor3">

    <LinearLayout
        android:id="@+id/color_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/backgroundColor4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/colorBlue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_marginTop="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorBlue" />

            <ImageView
                android:id="@+id/colorYellow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_marginTop="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorYellow" />

            <ImageView
                android:id="@+id/colorRed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_marginTop="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorRed" />

            <ImageView
                android:id="@+id/colorGreen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_marginTop="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorGreen" />

            <ImageView
                android:id="@+id/colorBrown"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginEnd="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_marginTop="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorBrown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/colorCyan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorCyan"

                />

            <ImageView
                android:id="@+id/colorGray"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorGray" />

            <ImageView
                android:id="@+id/colorOrange"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorOrange" />

            <ImageView
                android:id="@+id/colorWhite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorWhite" />

            <ImageView
                android:id="@+id/colorVinous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/paddingBetweenSquares"
                android:layout_marginEnd="@dimen/paddingBetweenSquares"
                android:layout_marginStart="@dimen/paddingBetweenSquares"
                android:layout_weight="1"
                android:background="@color/colorVinous" />
        </LinearLayout>

    </LinearLayout>

    <com.example.eafor.clientserverapp.draw_view.DrawView
        android:id="@+id/canvas"
        android:layout_width="338dp"
        android:layout_height="338dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="195dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Hello there!"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/text_connecting"
        android:layout_width="191dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:text="Подключиться?"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <Button
        android:id="@+id/button_connecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Да"
        app:layout_constraintEnd_toEndOf="@+id/text_connecting"
        app:layout_constraintStart_toStartOf="@+id/text_connecting"
        app:layout_constraintTop_toBottomOf="@+id/text_connecting" />

    <EditText
        android:id="@+id/loginField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Login"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/loginField"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/loginField"
        app:layout_constraintTop_toBottomOf="@+id/loginField" />
</android.support.constraint.ConstraintLayout>